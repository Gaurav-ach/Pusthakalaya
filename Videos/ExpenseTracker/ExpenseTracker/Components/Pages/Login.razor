@page "/"
@inject UserService UserService
@inject NavigationManager NavigationManager
@using ExpenseTracker.Components.Layout
@using ExpenseTracker.Components.Model
@using ExpenseTracker.Model
@layout FirstLayout

<style>
    /* Styling for the login container */
    div {
        margin: 0 auto;
        max-width: 400px;
        padding: 30px;
        background-color: #f9f9f9;
        border-radius: 10px;
        border: 1px solid #ddd;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Heading styling */
    h3 {
        text-align: center;
        color: #333;
    }

    /* Input field styling */
    input {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border-radius: 4px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

        /* Focus effect on input fields */
        input:focus {
            border-color: #4CAF50;
            outline: none;
        }

    /* Button styling */
    button {
        width: 100%;
        padding: 10px;
        background-color: #4CAF50;
        color: white;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        /* Button hover effect */
        button:hover {
            background-color: #45a049;
        }

    /* Link styling */
    a {
        display: block;
        text-align: center;
        margin-top: 15px;
        font-size: 14px;
        text-decoration: none;
        color: #007bff;
    }

        a:hover {
            text-decoration: underline;
        }

    /* Message text styling */
    p {
        text-align: center;
        font-weight: bold;
        color: red;
    }
</style>

<h3>Login</h3>

<div>
    <input @bind="LoginUsername" placeholder="Username" />
    <input @bind="LoginPassword" placeholder="Password" type="password" />
    <button @onclick="LoginPage">Login</button>
    <a href="/register">Register</a>
</div>

@if (!string.IsNullOrEmpty(Message))
{
    <p>@Message</p>
}

@code {
    private string LoginUsername = "";
    private string LoginPassword = "";
    private string Message = "";
    private AppData data;

    protected override void OnInitialized()
    {
        // Create an instance of UserService
        var userService = new UserService();

        // Load the entire AppData object
        data = userService.LoadData();
    }

    private void LoginPage()
    {
        var user = data.Users.FirstOrDefault(u => u.Username == LoginUsername);

        if (user != null && UserService.ValidatePassword(LoginPassword, user.Password))
        {
            // Redirect to dashboard if login is successful
            NavigationManager.NavigateTo("/dashboard");
        }
        else
        {
            Message = "Invalid username or password.";
        }
    }
}
